{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/main",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputMode": "full",
      "outputs": ["dist/**", ".next/**"]
    },
    "format": {
      "dependsOn": [],
      "outputs": []
    },
    "lint": {
      "dependsOn": ["format"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["lint"],
      "outputs": ["coverage/**"],
      "outputMode": "full"
    },
    "dev": {
      "cache": false
    },
    "storybook": {
      "cache": false
    },
    "deploy": {
      "dependsOn": ["format", "lint", "test", "build"],
      "outputs": []
    }
  }
}
