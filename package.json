{
  "name": "snapp-shop",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "configs/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "cross-env NODE_OPTIONS='--inspect' turbo run dev --parallel",
    "test": "turbo run test",
    "cypress": "turbo run cypress",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,css,scss,md,json}\"",
    "prepare": "husky install",
    "commit": "cz",
    "build:customer": "turbo run build --filter=customer",
    "build:panel": "turbo run build --filter=panel",
    "dev:customer": "turbo run dev --filter=customer",
    "dev:panel": "turbo run dev --filter=panel",
    "dev:design": "turbo run dev --filter=design",
    "storybook": "turbo run storybook --filter=design",
    "test:customer": "turbo run test --filter=customer",
    "test:panel": "turbo run test --filter=panel",
    "test:design": "turbo run test --filter=design",
    "cypress:customer": "turbo run cypress --filter=customer",
    "cypress:panel": "turbo run cypress --filter=panel",
    "cypress:design": "turbo run cypress --filter=design",
    "lint:customer": "turbo run lint --filter=customer",
    "lint:panel": "turbo run lint --filter=panel",
    "lint:design": "turbo run lint --filter=design",
    "format:customer": "turbo run format --filter=customer",
    "format:panel": "turbo run format --filter=panel",
    "format:design": "turbo run format --filter=design"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@testing-library/dom": "^8.14.1",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.2.1",
    "@types/jest": "^28.1.4",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.3",
    "cypress": "^10.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint-config-custom": "*",
    "husky": "^8.0.1",
    "jest": "^28.1.2",
    "jest-environment-jsdom": "^28.1.2",
    "prettier": "^2.7.1",
    "stylelint-config-custom": "*",
    "test-config": "*",
    "turbo": "^1.3.1"
  },
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=16.0.0"
  },
  "dependencies": {
    "browserslist-config-custom": "*"
  },
  "packageManager": "yarn@1.22.17"
}
