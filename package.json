{
  "name": "snapp-shop",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "cross-env NODE_OPTIONS='--inspect' turbo run dev --parallel",
    "test": "turbo run test",
    "cypress": "turbo run cypress",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md,json}\""
  },
  "devDependencies": {
    "@testing-library/dom": "^8.14.1",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.2.1",
    "@types/jest": "^28.1.4",
    "cross-env": "^7.0.3",
    "cypress": "^10.3.0",
    "eslint-config-custom": "*",
    "jest": "^28.1.2",
    "jest-environment-jsdom": "^28.1.2",
    "prettier": "^2.7.1",
    "stylelint-config-custom": "*",
    "test-config": "*",
    "turbo": "^1.3.1"
  },
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=16.0.0"
  },
  "dependencies": {
    "browserslist-config-custom": "*"
  },
  "packageManager": "yarn@1.22.17"
}
